    <script>
        function verificar(respuesta) {
            const resultado = document.getElementById("resultado");
            const botones = document.querySelectorAll(".btn");
            
            // Desactivar todos los botones temporalmente
            botones.forEach(btn => {
                btn.disabled = true;
                setTimeout(() => {
                    btn.disabled = false;
                }, 1500);
            });
            
            // Limpiar clases anteriores
            resultado.className = "result";
            botones.forEach(btn => {
                btn.classList.remove("correct", "incorrect");
            });
            
            if (respuesta === 8) {
                resultado.innerHTML = "¬°CORRECTO! üåü";
                resultado.classList.add("success");
                document.querySelector('.btn:nth-child(1)').classList.add("correct");
                // Sonido de √©xito (opcional)
                if (typeof window.AudioContext !== 'undefined') {
                    const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
                    const oscillator = audioCtx.createOscillator();
                    oscillator.type = 'sine';
                    oscillator.frequency.setValueAtTime(800, audioCtx.currentTime);
                    oscillator.connect(audioCtx.destination);
                    oscillator.start();
                    setTimeout(() => oscillator.stop(), 300);
                }
            } else {
                resultado.innerHTML = "¬°INT√âNTALO DE NUEVO! üí™";
                resultado.classList.add("error");
                
                // Encontrar el bot√≥n correcto y el seleccionado
                const btnCorrecto = document.querySelector('.btn:nth-child(1)');
                const btnSeleccionado = Array.from(botones).find(btn => 
                    btn.innerHTML == respuesta
                );
                
                btnCorrecto.classList.add("correct");
                if (btnSeleccionado) btnSeleccionado.classList.add("incorrect");
            }
        }
    </script>
